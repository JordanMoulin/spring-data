<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<!-- JTA -> les ressources sont fournies par un serveur Java EE -->
	<!-- RESOURCE_LOCAL -> les ressources sont gérées par l'application -->
	<persistence-unit name="demo-jpa" transaction-type="RESOURCE_LOCAL">

		<!-- Choix de l'implémentation JPA -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>dev.jpa.Client</class>
		<properties>
		<!-- Informations de connexion à la base de données -->
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/chat" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />
			
			<!-- Log dans la console des requêtes SQL générées par JPA -->
			<property name="hibernate.show_sql" value="true" />
		</properties>

	</persistence-unit>
</persistence>
